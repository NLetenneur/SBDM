{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
    <h1>Détails d'un pays</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id du pays</th>
                <td>{{ pay.idPays }}</td>
            </tr>
            <tr>
                <th>Nom du pays</th>
                <td>{{ pay.nomPays }}</td>
            </tr>
        </tbody>
    </table>

    <a role="button" class="btn btn-light mb-2" href="{{ path('pays_index') }}">Retour à la liste</a> <br>

    <a role="button" class="btn btn-info mb-2" href="{{ path('app_pays_edit', {'idPays': pay.idPays}) }}">Modifier</a>

    {{ include('pays/_delete_form.html.twig') }}
{% endblock %}
